    "require": {
        "php": "^7.1",
        "monolog/monolog": "^1.17",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "twig/twig": "^2"
    },
    "require-dev": {
        "phpunit/phpunit": "^6",
        "vimeo/psalm": "^0|^1"
    },
    "autoload": {
        "psr-4": {
